<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.17763.0</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <StartupObject>RecipeDatabase.Program</StartupObject>
    <ApplicationIcon>Icons\food.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Icons\food.ico" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="MillerInc">
      <HintPath>MillerInc.dll</HintPath>
    </Reference>
    <Reference Include="Newtonsoft.Json">
      <HintPath>Backend\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>